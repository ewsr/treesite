<% if @single %>
    <circle cx="<%= @tree.x %>" cy="<%= @tree.y %>" r="3" fill="green"/>
<% else %> 
    <% @trees.each do |tree| %>
        <a href="/trees/<%= tree.id %>" class="tree decid" target="_parent">
            <circle cx="<%= tree.x %>" cy="<%= tree.y %>" r="3" fill="green"/>
        </a>
    <% end %>
<% end %>